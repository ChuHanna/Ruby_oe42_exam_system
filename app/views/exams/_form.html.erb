<%= form_for @exam do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div>
    <div class="form-group">
      <%= f.label :subject_id, class: "required" %>
      <%= f.select :subject_id, Subject.pluck(:name, :id),
        {id: "chosen-subject", class: "form-control", multiple: "true"} %>
    </div>
    <p><strong><%= t ".question" %></strong></p>
    <div id="questions">
      <%= f.fields_for :questions_exams do |questions_exam| %>
        <%= render "question_fields", f: questions_exam %>
      <% end %>
      <div class="links">
        <%= link_to_add_association t(".add_questions_exam"), f, :questions_exams %>
      </div>
    </div>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-success" %>
<% end %>
