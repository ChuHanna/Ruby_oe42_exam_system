<%= form_for @subject do |s| %>
  <%= render "shared/error_messages", object: s.object %>

  <%= s.label :name, t(".name") %>
  <%= s.text_field :name %>

  <%= s.label :description, t(".description") %>
  <%= s.text_field :description %>

  <%= s.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
