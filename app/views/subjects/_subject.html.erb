<li>
  <span class="user"><%= link_to subject.user_name, subject.user %></span>
  <span class="description">
    <%= subject.name %>
    <%= subject.description %>
  </span>
  <span class="delete">
    <% if current_user? subject.user %>
      | <%= button_to t(".delete"), {action: "destroy", id: subject.id}, method: :delete, data: {confirm: t(".sure")} %>
    <% end %>
  </span>
</li>
